<odoo>
    <data>

        <record id="kiz_pr_form" model="ir.ui.view">
            <field name="name">purchase.request.form</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>

            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_id']" position="after">
                    <field name="account_id" string="production management slip no" context="{'default_analytic_account_id': '222'}"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']" position="attributes">
                    <attribute name="context">{'default_analytic_account_id':account_id}</attribute>
                </xpath>

            </field>
        </record>

    </data>
</odoo>