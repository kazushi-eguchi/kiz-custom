<odoo>
  <data>
    <!-- explicit list view definition -->
    <record id="purchase_order_inherit_attach_image" model="ir.ui.view">
            <field name="name">purchase.request.form.attach.image</field>
            <field name="model">purchase.request</field>
            <field name="inherit_id" ref="purchase_request.view_purchase_request_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                    <field name="request_img"  widget="image" class="oe_avatar"/>
               </xpath>

            </field>
    </record>
    <record id="purchase_order_inherit_attach_image_line" model="ir.ui.view">
            <field name="name">purchase.request.form.line.attach.image</field>
            <field name="model">purchase.request.line</field>
            <field name="inherit_id" ref="purchase_request.purchase_request_line_form"/>
            <field name="arch" type="xml">
              <xpath expr="//field[@name='description']" position="after">
                    <field name="request_img"  widget="image" class="oe_avatar"/>
               </xpath>
            </field>
    </record>
