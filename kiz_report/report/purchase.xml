<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="purchase">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="kiz_report.external_layout">
                    <div class="page">

                        <xpath expr="//div[@name='company_address']" position="replace"></xpath>
                        <t t-set="type">type_purchase</t>
                        <t t-set="address">
                            <div t-field="o.partner_id"
                                 t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                            <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>:
                                <span t-field="o.partner_id.vat"/>
                            </p>
                        </t>
                        <t t-call="kiz_report.common_header_layout"/>
                        <!--                        <t t-call="kiz_report.purchase_table" />-->
                        <table class="table table-condensed" style="table-layout: fixed">
                            <tbody class="invoice_tbody">

                                <thead style="background-color:#F8F9FA" >

                                    <tr>
                                        <!--                                        <th>summary</th>-->
                                        <th class="text-center">Item</th>
                                        <th class="text-center" width="25%">Spec</th>
                                        <th class="text-center" width="8%">Qty</th>
                                        <th class="text-center">Delivery place</th>
                                        <th class="text-center">Image</th>
                                        <th class="text-center" width="30%">Note</th>

                                    </tr>
                                </thead>
                                <tr t-foreach="o.order_line" t-as="l">
                                    <t
                                            t-set="images"
                                            t-value="l.mapped('item_purchase_image_ids')"
                                    />
                                    <td class="text-center">
                                        <span t-field="l.product_template_id" />
                                    </td>
                                    <td class="text-left">
                                        <t t-foreach="l.product_id.product_template_attribute_value_ids"
                                           t-as="string_line">
                                            ●
                                            <span t-esc="string_line.display_name"/>
                                            <br/>
                                        </t>
                                        <t t-foreach="l.config_session_id.custom_value_ids" t-as="string_line">
                                            ●<span t-esc="string_line.display_name"/>:
                                            <span t-esc="string_line.value"/>
                                            <br/>
                                        </t>
                                    </td>

                                    <td class="text-center">
                                        <div id="quote_qty">
                                            <span t-esc="'{0:,.0f}'.format(l.product_uom_qty)"/>

                                        </div>
                                    </td>

                                    <td class="text-center">
                                        <span t-field="l.delivery_spot"/>
                                    </td>
                                    <td class="text-left">
                                        <t t-if="images">
                                            <t t-foreach="images" t-as="image">
                                                <div t-field="image.name"/>
                                            </t>
                                        </t>
                                    </td>
                                    <td class="text-left" >
                                        <span t-field="l.note"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <hr/>
<!--                        <div>Attached image</div>-->
                        <div t-foreach="o.order_line" t-as="l">
                            <!--                            <span t-field="l.item_purchase_image_ids.name"/>-->
                            <t
                                    t-set="images"
                                    t-value="l.mapped('item_purchase_image_ids')"
                            />
                            <t t-if="images">
                                <t t-foreach="images" t-as="image">
                                    <div>
                                        <!--                <td style="border: 0;">-->
                                        <!--                    <span t-field="image.name" />-->
                                        <!--                </td>-->
                                        <div colspan="99" style="border: 0;">
                                            <div style="text-align: center;">

                                                <img
                                                        t-att-src="image_data_uri(image.image_1920)"
                                                        style="max-width: 800px;max-height: 800px; padding-top: 10px;"
                                                />
                                                <div t-field="image.name"/>
                                            </div>
                                        </div>
                                    </div>
                                </t>

                            </t>
                        </div>
                    </div>
                </t>
            </t>

        </t>
    </template>

    <template id="purchase_table">
        <table class="table table-condensed">
            <tbody class="sale_tbody">
                <thead style="background-color:#F8F9FA">
                    <th>product</th>
                    <th>spec</th>
                    <th>qty</th>
                    <th>place</th>
                </thead>
                <t t-foreach="o.order_line" t-as="l">
                    <tr>
                        <td>
                            <span t-field="l.product_template_id.display_name"/>
                        </td>

                        <td>
                            <t t-foreach="l.product_id.product_template_attribute_value_ids" t-as="string_line">
                                <span t-esc="string_line.display_name"/>
                                <br/>
                            </t>
                        </td>
                        <td>
                            <span t-esc="'{0:,.0f}'.format(l.product_uom_qty)"/>
                        </td>
                        <td></td>
                    </tr>

                </t>
            </tbody>
        </table>
    </template>
</odoo>